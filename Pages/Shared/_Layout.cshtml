                    <li><a href="#" target="_blank">NPTEL</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>

            <div class="col-lg-3 col-md-6 mb-2">
                <h4 class="footer-heading">Other Links</h4>
                <div class="heading-line"></div>
                <ul class="footer-links list-unstyled">
                    <li><a href="#" target="_blank">NDL</a></li>
                    <li><a href="#" target="_blank">SWAYAM</a></li>
                    <li><a href="#" target="_blank">E-PG Pathsala</a></li>
                    <li><a href="#" target="_blank">Sodhganga</a></li>
                    <li><a href="#" target="_blank">AICTE</a></li>
                    <li><a href="#">NCSCS</a></li>
                    <li><a href="#">Archives</a></li>
                </ul>
            </div>
        </div>
        <div class="footer_bottom text-white">
        <p class="container text-center">
            &copy; 2026 Kazi Nazrul University. All rights reserved
        </p>
    </div>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>